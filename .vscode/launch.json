    {
      "name": "Debug simple_prompt_runner with specified arguments",
      "type": "ruby_lsp",
      "request": "launch",
      "program": "ruby -E UTF-8 scripts/simple_prompt_runner.rb --batch-size 1",
      "env": {}
    }
  ]
